package project.model;

import java.util.ArrayList;

/**
 * This class represents to salesperson and inherits from the person class
 *
 * @author Jose Manuel Taborda
 * @author Juan Esteban Ramirez
 * @author Juan Esteban Cardona
 *
 */
public class Vendedor extends Persona {

	// Attribute Declaration

	private Feed feed;
	private ArrayList<Venta> listaVentas = new ArrayList<Venta>();
	private ArrayList<Compra> listaCompras = new ArrayList<Compra>();

	/**
	 * Constructor of the salesperson class
	 *
	 * @param nombre
	 * @param apellidos
	 * @param cedula
	 * @param direccion
	 */
	public Vendedor(String nombre, String apellidos, String cedula, String direccion) {
		super(nombre, apellidos, cedula, direccion);
	}

	/**
	 * Get Feed
	 *
	 * @return
	 */
	public Feed getFeed() {
		return feed;
	}

	/**
	 * Set Feed
	 *
	 * @param feed
	 */
	public void setFeed(Feed feed) {
		this.feed = feed;
	}

	/**
	 * Get the sales list
	 *
	 * @return
	 */
	public ArrayList<Venta> getListaVentas() {
		return listaVentas;
	}

	/**
	 * Set the sales list
	 *
	 * @param listaVentas
	 */
	public void setListaVentas(ArrayList<Venta> listaVentas) {
		this.listaVentas = listaVentas;
	}

	/**
	 * get the shopping list
	 *
	 * @return
	 */
	public ArrayList<Compra> getListaCompras() {
		return listaCompras;
	}

	/**
	 * Set the shopping list
	 *
	 * @param listaCompras
	 */
	public void setListaCompras(ArrayList<Compra> listaCompras) {
		this.listaCompras = listaCompras;
	}

}
